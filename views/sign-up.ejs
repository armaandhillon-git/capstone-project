
<%- include('./templates/header', {app: app_const, session, title: "Sign Up"}); %>
<style>
    body {
        background-color: #FFF;
    }
</style>

<header class="main_header">
    <h1> Sign Up </h1>
</header>

<!-- Page content-->
<main>
    <section>

        <div class="container">
            <div class="cform">
                <div class="cform_wrapper">
                        <form id="cform" action="" method="POST" onsubmit="sign_up_form(event)">
                            <span class="aformError"></span>
                            <div class="form-group">
                                <label for="email"><b>Email</b></label>
                                <input  required class="form-control" type="email" placeholder="Enter Email" id="email" name="email" type="email" required>
                            </div>
                            <div class="form-group">
                                <label for="fname"><b>Phone Number</b></label>
                                <input  required class="form-control" placeholder="Phone number" id="phone" name="phone" required>
                            </div>
                            <div class="form-group">
                                <label for="fname"><b>Full Name</b></label>
                                <input required class="form-control" placeholder="Enter Full namel" id="fname" name="fname" required>
                            </div>
                            <div class="form-group">
                                <label for="address"><b>Address</b></label>
                                <input required class="form-control" placeholder="Enter Address" id="address" name="address" required>
                            </div>
                            <div class="form-group">
                                <label for="password"><b>Password</b></label>
                                <input required class="form-control" type="password" placeholder="Enter Password" id="password" name="password" required>
                            </div>
                            <div class="form-group">
                                <label for="password2"><b>Repeat Password</b></label>
                                <input required class="form-control" type="password" placeholder="Repeat Password" id="password2" name="password2" required>
                            </div>
                            <div class="form-group" id="sbutton">
                                <button type="submit" class="btn btn-block btn-lg btn-primary">Sign Up</button>
                            </div>

                        </form>
                </div>

            </div>

        </div>
    </section>


</main>

<%- include('./templates/footer', {app: app_const}); %>