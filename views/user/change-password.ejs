<%- include('../templates/user_header', {app: app_const, session, title: "Change Password"}); %>
<!-- Page content-->
<div class="container-fluid">

  <h1 class="mt-4 text-center"><small>Change Password</small></h1>


  <div class="cform">
    <div class="cform_wrapper">
        <form id="cform" action="" method="POST" onsubmit="update_password(event)">
          <span id="report"></span>
          <div class="form-group">
            <label for="opassword"><b>Old Password</b></label>
            <input required class="form-control" type="password" placeholder="Enter Old Password" id="opassword" name="opassword">
          </div>
          <div class="form-group">
            <label for="password"><b>Password</b></label>
            <input required class="form-control" type="password" placeholder="Enter Password" id="password" name="password" required>
          </div>
          <div class="form-group">
            <label for="password2"><b>Repeat Password</b></label>
            <input required class="form-control" type="password" placeholder="Repeat Password" id="password2" name="password2" required>
          </div>
          <div class="form-group" id="sbutton">
            <button type="submit" class="btn btn-block btn-lg btn-primary">Update</button>
          </div>

        </form>
    </div>

  </div>


</div>

<%- include('../templates/user_footer', {app: app_const}); %>